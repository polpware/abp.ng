{
  "$schema": "http://json-schema.org/schema",
  "id": "application",
  "type": "object",
  "properties": {
    "theme": {
      "description": "Specifies the theme to create application.",
      "enum": [
        "ng-alain",
        "college-green",
	      "ace"
      ],
      "type": "string"
    },    
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "directory": {
      "description": "The directory of the new application.",
      "type": "string"
    }  
  },
  "required": [
    "theme","name"
  ]
}